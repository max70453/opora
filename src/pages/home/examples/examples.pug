section.examples
  .container
    h2.examples__title.title= title
    .swiper
      .swiper-wrapper
        each slide in slider
          .swiper-slide
            .examples__slide-wrap.hover-image-scale
              a(href=require('/images/' + slide.source)).with-caption.image-link
                img(src=require('/images/' + slide.source), alt=slide.alt).examples__img.hover-image-scale
      .swiper-button-prev
      .swiper-button-next
      .swiper-pagination
