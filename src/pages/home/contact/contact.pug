doctype html
html(lang="en")
  head 
    title= pageTitle
    link(rel="stylesheet", href="index.css")
    script(src='main.js')
  body
    section.contact
      .container
        h2.contact__title.title= title
        .contact__subtitle= subtitle
        form(action="").contact__form
          .contact__inputs-wrapper
            .contact__input-wrap
              input(type="email", value, placeholder="Ваш e-mail").contact__input
            .contact__input-wrap
              input(type="name", value, placeholder="Ваше имя").contact__input
            .contact__input-wrap
              input(id="phone" type="tel").contact__input.phone-select
            .contact__input-wrap
              button(type="submit").contact__input-submit.btn-accent= button 
      .contact__dec-element